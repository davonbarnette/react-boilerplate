@import '../../../../global/scss/config';

.{{snakeCase componentName}}-modal-content{
  @include max-size;
}

.{{snakeCase componentName}}-form {
  max-width:500px;

  & .content{
    @include pad-box(24px);
    background:$secondary-background-color;
  }

  & .field {
    min-width:400px;
    width:100%;
    margin-bottom:12px;
  }

  & .submit{
    @include pad-box(12px 24px);
    @include border(solid none none none);

    & .button{
      width:fit-content;
      margin-left:auto;
    }
  }
}